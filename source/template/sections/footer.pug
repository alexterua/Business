- var linkItems = ['facebook', 'twitter', 'google-plus', 'linkedin'];
- var linkUrls = ['facebook.com', 'twitter.com', 'google.com', 'linkedin.com'];

footer.footer
  .footer__top
    .container
      .footer__title Связаться
      .footer__links
        each item, key in linkItems
          a.footer__social(href="http://" + linkUrls[key] target="_blank")
            i(class="fab fa-" + item)
              span.visually-hidden=linkItems
      .footer__text Подпишитесь на нашу рассылку, чтобы уточнить, что нового
      form(action="#", method="post")
        .footer__field
          input.footer__input(type="email" placeholder="Email")
        button(type="submit").button Подписаться
  .footer__bottom
